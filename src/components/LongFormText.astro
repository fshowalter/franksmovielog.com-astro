---
import RenderedMarkdown from "@/components/RenderedMarkdown.astro";
import { twMerge } from "tailwind-merge";

interface Props {
  text: string;
  class?: string;
}

const props = Astro.props;
---

<RenderedMarkdown
  text={props.text}
  class={twMerge("text-md/7 tracking-0.3px tablet:text-xl/8", props.class)}
/>
