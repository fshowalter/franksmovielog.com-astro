---
import { Layout as LayoutComponent } from "@/components/Layout";
import "./base.css";

interface Props {
  title: string;
  description: string;
  image?: string | null;
  article?: boolean;
}

const siteMeta = {
  author: "Frank Showalter",
  url: "https://www.franksmovielog.com/",
  image: "/assets/default_og.jpg",
  title: "Frank's Movie Log",
};

const { title, description, image, article = false } = Astro.props;
let pageTitle;

if (title.startsWith(siteMeta.title)) {
  pageTitle = title;
} else {
  pageTitle = `${title} | ${siteMeta.title}`;
}

const pathname = new URL(Astro.request.url).pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="og:image" content={image} />
    <meta property="og:url" content={`${siteMeta.url}${pathname}`} />
    {article && <meta property="og:type" content="article" />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <title>{pageTitle}</title>
  </head>
</html>
<body>
  <LayoutComponent currentPath={pathname}>
    <slot />
  </LayoutComponent>
</body>
